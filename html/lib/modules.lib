--color_id
flags default true
flags family color
component color_id

--seed_border
flags default true
flags family seed
component seed_border
par seed_w 0.4
modules t t
sub reduce z = torus_reduce(z)

--t_wrap
flags default true
flags family t
component t_wrap
zn 1.0 + 0.0i, 0.0 + 0.0i, 1.0 + 0.0i, 0.0 + 0.0i,
sub t_inner z = zn[#0] * z + zn[#1]
sub t       z = exp(z)
sub t_outer z = zn[#2] * z + @zn[#3]