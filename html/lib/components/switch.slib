id id{{
}}

switch switch{{
	$dim$ v0, v1, init;
	init = $var$;
	%m0%
	v0 = $var$;

	$var$ = init;
	%m1%
	v1 = $var$;

	float x = @intrp@;
	if(x <= 0.0)
		x = 0.0;
	else if(x >= 1.0)
		x = 1.0;

	$var$ = (1.0 - x) * v0 + x * v1;
}}


switch smooth_switch{{
	$dim$ v0, v1, init;

	init = $var$;
	%m0%
	v0 = $var$;

	$var$ = init;
	%m1%
	v1 = $var$;

	float x = @intrp@;
	if(x <= 0.0)
		x = 0.0;
	else if(x >= 1.0)
		x = 1.0;
	else
		x = x * x * (3.0 - 2.0 * x);

	$var$ = (1.0 - x) * v0 + x * v1;
}}
